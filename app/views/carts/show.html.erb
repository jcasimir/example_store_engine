<h1>Your Cart</h1>
<div id="cart">
  <table>
    <% cart.items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.quantity %></td>
        <td><%= item.total %></td>
      </tr>
    <% end %>
    <tr>
      <td>ORDER TOTAL:</td>
      <td id="total">
        <%= cart.total %>
      </td>
    </tr>
  </table>
</div>

<%= link_to "Destroy Cart", cart_path(cart), :method => :delete %>
